<link href="//fonts.googleapis.com/css?family=Roboto+Slab%3A400%2C300" rel="stylesheet" property="stylesheet" type="text/css" media="all" />

<div data-placement_fullwidth="{%- if section.settings.placement_fullwidth -%}1{%- else -%}0{%- endif -%}" data-section-id="{{section.id}}"
   data-section-type="rvshighlight" data-delaytime="{{section.settings.delay_time}}" id="rvshighlight-{{section.id}}_wrapper" 
     class="rev_slider_wrapper fullwidthbanner-container {%- if section.settings.visible_on_mobile == false -%}{{" hidden-xs"}}{%- endif-%}" data-alias="highlight-showcase{{section.id}}" data-source="gallery" style="margin:0px auto;background-color:transparent;padding:0px;margin-top:0px;margin-bottom:0px;">
