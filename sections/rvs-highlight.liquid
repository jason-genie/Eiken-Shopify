             id="slide-2985-layer-1" 
             data-x="['left','left','left','left']" data-hoffset="['80','80','40','40']" 
             data-y="['top','top','top','top']" data-voffset="['450','450','250','150']" 
             data-width="364"
             data-height="133"
             data-whitespace="normal"
             data-type="text" 
             data-responsive_offset="on" 
