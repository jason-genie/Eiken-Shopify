{% schema %}
{
  "name": "Highlight Slider",
  "class": "rvshighlight section-wrapper",
  "max_blocks": 5,
  "settings": [
	{
	  "type": "paragraph",
	  "content": "(!!!)WARNING: To use this slider, you must turn on the Revolution Slider in general settings tab: Theme Settings > Revolution Slider > Enabled"
	},
    {
      "type": "checkbox",
      "id": "placement_fullwidth",
      "label": "Force Full Width",
      "default": false
    },
	{
      "type": "checkbox",
      "id": "visible_on_mobile",
      "label": "Show on Mobile",
      "default": true
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Top Margin",
      "default": 0
    },
    {
      "type": "color",
      "id": "process_bar_color",
      "label": "Process Bar Color",
      "default": "#CA302C"
    },
    {
      "type": "range",
      "label": "Delay (in milliseconds)",
      "id": "delay_time",
      "min": 2000,
      "max": 9000,
      "step": 1000,
      "unit": "ms",
      "default": 4000
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "header",
          "content": "General"
        },
		{
          "type": "image_picker",
          "id": "slide_image",
          "label": "Pick an Image"
		},
		{
          "type": "select",
          "id": "slide_image_quality",
          "label": "Image Quality",
          "options": [
            {
              "value": "500x",
              "label": "Low"
            },
            {
              "value": "1200x",
              "label": "Normal"
            },
            {
              "value": "1920x",
              "label": "High"
            }
          ],
          "default": "1920x"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Give a Title",
		  "default": "Your Title"
        },
		{
          "type": "text",
          "id": "slide_heading",
          "label": "Give a Heading",
		  "default": "Your Heading"
        },
		{
          "type": "text",
          "id": "slide_caption",
          "label": "Give some texts",
		  "default": "Even some texts can smile with you."
        },
		{
          "type": "url",
          "id": "slide_url",
          "label": "Choose an URL",
		  "default": "/collections/all"
        },
		{
          "type": "header",
          "content": "Style"
        },
		{
          "type": "color",
          "id": "slide_heading_color",
          "label": "Heading color",
		  "default": "#ffffff"
        },
		{
          "type": "color",
          "id": "slide_caption_color",
          "label": "Caption color",
		  "default": "#ffffff"
        }
      ]
	}
  ],
  "presets": [
	{
      "name": "Highlight Slider",
      "category": "Revolution Sliders",
      "settings": {
      },
  	  "blocks": [
		{
          "type": "slide"
        },
		{
          "type": "slide"
        }
  	  ]
    }
  ]
}
{% endschema %}

