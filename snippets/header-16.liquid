<header class="header-type-16">
  <div class="background-header"></div>
  <div class="slider-header">
    <!-- Top of pages -->
    <div id="top" class="{%- if settings.header_layout == '1' -%}full-width{%- elsif settings.header_layout == '4' -%}fixed3 fixed2{%- elsif settings.header_layout == '3' -%}fixed2{%- else -%}fixed{%- endif -%}">
      <div class="background-top"></div>
      <div class="background">
        <div class="shadow"></div>
        <div class="pattern">
          <div class="top-bar">
            <div class="container">
              <div class="row">
                <!-- Welcome text -->
                <div class="col-sm-6 welcome-text">
                  {%- if customer -%}
                  <a href="/account/logout"><b>{{ 'general.top.logout' | t }}</b></a>
                  {%- else -%}
                  {{ 'general.top.welcome_visitor' | t }}
                  <a href="/account/login"><b>{{ 'general.top.login' | t }}</b></a> 
                  or 
                  <a href="/account/register"><b>{{ 'general.top.register' | t }}</b></a>
                  {%- endif -%}
                </div>
                <div class="col-sm-6 overflow-currency-language">
                  <!-- Currency & Language -->
                  {%- include 'currencies-switcher' -%}
                </div>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <!-- Header Left -->
              <div class="col-sm-4 orderable" id="header-left">	
                {%- section 'header-top-block' -%}
                <!-- Links -->
                <ul class="menu">
                  {%- if shop.customer_accounts_enabled -%}
                  <li><a href="/account">{{ 'general.top.my_account' | t }}</a></li>
                  {%- endif -%}
                  {%- if settings.wishlist_enable -%}
                  <li><a href="{{pages[settings.wishlist_page].url}}" id="wishlist-total">{{ 'general.top.wishlist' | t }}</a></li>
                  {%- endif -%}
                  <li><a href="{% unless request.locale.primary %}{{ request.locale.root_url }}{% endunless %}/cart">{{ 'general.cart_info.cart' | t }}</a></li>
                  <li><a href="{% unless request.locale.primary %}{{ request.locale.root_url }}{% endunless %}/checkout">{{ 'general.cart_info.checkout' | t }}</a></li>
                </ul>
              </div>
              <!-- Header Center -->
              <div class="col-sm-4" id="header-center">
                <!-- Logo -->
                {%- include "header-logo" -%}
              </div>
              <!-- Header Right -->
              <div class="col-sm-4" id="header-right">
                {%- if shop.customer_accounts_enabled -%}
                <a href="/account" class="my-account">{%- include "account-icon" -%}</a>
                {%- endif -%}
                {%- include 'cartblock' with 'header' -%}
              </div>
            </div>
          </div>
          {%- assign megamenu_type_having_2ndMenu = '4,5,6,9,14,19,29' | split: ',' -%}
          {%- if megamenu_type_having_2ndMenu contains settings.advanced_megamenu_type -%}
          <div class="container container-megamenu2 orderable">
            {%- endif -%}
            <!-- Menu -->
            <div  class="megamenu-background">
              <div class="">
                <div class="overflow-megamenu container">
                  <div class="row mega-menu-modules">
                    {%- section 'header-menu1' -%}
                    {%- section 'header-menu2' -%}
                  </div>
                </div>
              </div>
            </div>
            {%- if megamenu_type_having_2ndMenu contains settings.advanced_megamenu_type -%}
          </div>
          {%- endif -%}
          {%- comment -%}MEGAMENU2{%- endcomment -%}
        </div>
      </div>
    </div>
  </div>
  <!-- Slider -->
  <div id="slider" class="{%- if settings.slideshow_layout == '1' -%}full-width{%- elsif settings.slideshow_layout == '4' -%}fixed3 fixed2{%- elsif settings.slideshow_layout == '3' -%}fixed2{%- else -%}fixed{%- endif -%}">
    <div class="background-slider"></div>
    <div class="background">
      <div class="shadow"></div>
      <div class="pattern orderable">
        {%- include 'header-slideshow' -%}
      </div>
    </div>
  </div>
</header>